@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Project Team 04</h1>

<div class="text-center">
    <h1 class="display-4">Seattle Coffee Shop</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<!-- Using CSS grid for a masonry-like layout -->
<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 1rem;">
    @foreach (var product in Model.Products)
    {
        <div class="card">
            <div class="card-img" style="background-image: url('@product.Image'); height: 200px; background-size: cover; background-position: center;"></div>
            <div class="card-body">
                <h5 class="card-title">@product.Title</h5>
            </div>
        </div>
    }
</div>
